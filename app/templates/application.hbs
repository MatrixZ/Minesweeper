<h2 id="title">Minesweeper</h2>

<div class="row">
  <div class="col-md-4">{{noOfBugs}}</div>
  <div class="col-md-4">noOfMarkedCells: {{noOfMarkedCells}}</div>
  <div class="col-md-4"><a {{action "openAllCells"}}>Open All Cells</a></div>
</div>

<div class="row">
  <div class="col-md-6">
    <table border="0">
      <tbody>
        {{#each model as |row|}}
        <tr>
          {{#each row as |cell|}}
            {{#table-cell model=cell isMinesLoaded=isMinesLoaded oncontextmenu=rightClicked as |tableCell|}}
              {{#if cell.isOpened}}
                {{#if cell.value}}
                  {{cell.value}}
                {{else}}
                  {{#if cell.hasMine}}
                    <div style="display: inline-block; width:30px; height: 30px; background-color: red"></div>
                  {{/if}}
                {{/if}}
              {{else}}
                {{#if cell.isMarked}}
                  <div style="display: inline-block; width:30px; height: 30px; background-color: green"></div>
                {{/if}}
              {{/if}}
            {{/table-cell}}
          {{/each}}
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

{{outlet}}
